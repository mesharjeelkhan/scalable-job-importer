# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/job-importer
# For MongoDB Atlas, use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/job-importer?retryWrites=true&w=majority

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# For Redis Cloud, use:
# REDIS_HOST=redis-xxxxx.cloud.redislabs.com
# REDIS_PORT=12345
# REDIS_PASSWORD=your-password-here

# Queue Configuration
QUEUE_NAME=job-import-queue
QUEUE_CONCURRENCY=5
BATCH_SIZE=100
MAX_RETRIES=3
RETRY_DELAY=2000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Cron Configuration
ENABLE_CRON=true
CRON_SCHEDULE=0 * * * *

# Logging
LOG_LEVEL=info
